<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="2.5dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_list_imgurl"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#E8E0F8CF"
                        android:gravity="center"
                        android:text="기타이름"
                        android:textColor="#4B1200"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="6dp"
                                android:layout_marginVertical="3dp"
                                android:orientation="horizontal"
                                android:id="@+id/Linear_link"
                                >

                                <TextView
                                    android:id="@+id/textView_list_store"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="판매처"
                                    android:textColor="#391002" />

                                <TextView
                                    android:id="@+id/textView_list_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="가격"
                                    android:textColor="#391002"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="6dp"
                                android:layout_marginVertical="3dp"
                                android:orientation="horizontal"
                                android:id="@+id/Linear_link2"
                                >

                                <TextView
                                    android:id="@+id/textView_list_store2"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="TextView"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp"
                                    />

                                <TextView
                                    android:id="@+id/textView_list_price2"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="가격"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="6dp"
                                android:layout_marginVertical="3dp"
                                android:orientation="horizontal"
                                android:id="@+id/Linear_link3"
                                >

                                <TextView
                                    android:id="@+id/textView_list_store3"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="TextView"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp"/>

                                <TextView
                                    android:id="@+id/textView_list_price3"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="가격"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="6dp"
                                android:layout_marginVertical="3dp"
                                android:orientation="horizontal"
                                android:id="@+id/Linear_link4"
                                >

                                <TextView
                                    android:id="@+id/textView_list_store4"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="TextView"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp"
                                    />

                                <TextView
                                    android:id="@+id/textView_list_price4"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="가격"
                                    android:textColor="#000000"
                                    android:textSize="10.5sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >

                                <View
                                    android:id="@+id/view28"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="제조사:"
                                    android:textSize="6sp" />

                                <TextView
                                    android:id="@+id/textView_list_company"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="제조사"
                                    android:textSize="6sp" />

                                <View
                                    android:id="@+id/view29"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>